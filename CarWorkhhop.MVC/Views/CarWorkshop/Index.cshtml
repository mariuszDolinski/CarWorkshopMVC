@model IEnumerable<CarWorkshop.Application.CarWorkshop.CarWorkshopDto>

@{
    ViewData["Title"] = "Car Workshops";
}

<h1>Car Workshops</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>

<div class="album py-2 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3  g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm m-3" style="width: 18rem">
                        <img class="bd-placeholder-img card-img-top" src="~/images/win.jpg" asp-append-version="true"/>
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@item.PhoneNumber</h6>
                            <p class="card-text">@item.Description</p>
                            @*poprzez asp-route-nazwawlasciwosci przekazujemy parametr ze sciezki podanej w kontrolerze*@
                            <a class="btn btn-primary" asp-controller="CarWorkshop" asp-action="Details" asp-route-encodedName="@item.EncodedName">Details</a>
                            @if(item.IsEditable == true)
                            {
                                <a class="btn btn-secondary" asp-controller="CarWorkshop" asp-action="Edit" asp-route-encodedName="@item.EncodedName">Edit</a>
                            }                           
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
